<%- include('partials/header') %>
    <%- include('partials/navbar') %>

        <section class="page-hero">
            <div class="container hero-content">
                <div class="hero-text text-center">
                    <h1 class="hero-name animate-fade-up">Professional Skills</h1>
                    <p class="hero-title animate-fade-up delay-1">A comprehensive overview of my technical expertise and
                        tools.</p>
                </div>
            </div>
        </section>

        <section class="section section-skills">
            <div class="container">
                <div class="glass-card skills-full-card">
                    <h2 class="section-title">
                        <span class="title-accent">Î£</span> Skills & Technologies
                    </h2>
                    <p class="section-subtitle">I've spent years honing my craft across various domains. Here's a deeper
                        look at what I bring to the table.</p>

                    <div class="skills-grid-lg">
                        <% if (skills && skills.length) { %>
                            <% skills.forEach((skill, i)=> { %>
                                <div class="skill-item glass-card" style="animation-delay: <%= i * 0.05 %>s">
                                    <div class="skill-dot"></div>
                                    <span class="skill-name">
                                        <%= skill %>
                                    </span>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p class="empty-state">No skills added yet.</p>
                                        <% } %>
                    </div>

                    <!-- Add Skill Form -->
                    <div class="add-skill-wrapper glass-card mt-xl">
                        <h3 class="add-skill-title">Add a New Skill</h3>
                        <form action="/skills/add" method="POST" class="add-skill-form">
                            <input type="text" name="skillName"
                                placeholder="Enter skill name (e.g. Kubernetes, AWS, SQL)" required class="skill-input">
                            <button type="submit" class="btn-add-skill">
                                <span class="plus-icon">+</span> Add Skill
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>

            <style>
                .page-hero {
                    padding: 120px 0 60px;
                    background: var(--gradient-hero);
                    text-align: center;
                }

                .text-center {
                    text-align: center;
                    margin: 0 auto;
                }

                .section-subtitle {
                    margin-bottom: var(--gap-xl);
                    color: var(--color-text-secondary);
                }

                .skills-grid-lg {
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                    gap: var(--gap-md);
                    margin-top: var(--gap-xl);
                }

                .skill-item {
                    display: flex;
                    align-items: center;
                    gap: var(--gap-md);
                    padding: var(--gap-md);
                    transition: all var(--transition-base);
                }

                .skill-item:hover {
                    transform: scale(1.05);
                    border-color: var(--color-primary);
                    background: rgba(99, 102, 241, 0.1);
                }

                .skill-dot {
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    background: var(--color-accent);
                    box-shadow: 0 0 10px var(--color-accent);
                }

                .skill-name {
                    font-weight: 600;
                    font-size: 1.1rem;
                }

                .mt-xl {
                    margin-top: var(--gap-xl);
                }

                .add-skill-wrapper {
                    padding: var(--gap-lg);
                    max-width: 600px;
                    margin-left: auto;
                    margin-right: auto;
                    border: 1px dashed var(--color-primary);
                }

                .add-skill-title {
                    font-size: 1.2rem;
                    margin-bottom: var(--gap-md);
                    color: var(--color-text-primary);
                }

                .add-skill-form {
                    display: flex;
                    gap: var(--gap-md);
                }

                .skill-input {
                    flex: 1;
                    padding: 12px 16px;
                    border-radius: 8px;
                    border: 1px solid rgba(255, 255, 255, 0.1);
                    background: rgba(255, 255, 255, 0.05);
                    color: white;
                    outline: none;
                    transition: all 0.3s ease;
                }

                .skill-input:focus {
                    border-color: var(--color-primary);
                    background: rgba(255, 255, 255, 0.1);
                }

                .btn-add-skill {
                    padding: 10px 24px;
                    border-radius: 8px;
                    border: none;
                    background: var(--gradient-primary);
                    color: white;
                    font-weight: 600;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    transition: all 0.3s ease;
                }

                .btn-add-skill:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(99, 102, 241, 0.4);
                }

                .plus-icon {
                    font-size: 1.2rem;
                    font-weight: bold;
                }

                @media (max-width: 768px) {
                    .add-skill-form {
                        flex-direction: column;
                    }
                }
            </style>