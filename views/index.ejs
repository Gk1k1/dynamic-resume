<%- include('partials/header') %>
    <%- include('partials/navbar') %>

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-bg-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
            <div class="container hero-content">
                <div class="hero-text">
                    <p class="hero-greeting animate-fade-up">Hello, I'm</p>
                    <h1 class="hero-name animate-fade-up delay-1">
                        <%= name %>
                    </h1>
                    <p class="hero-title animate-fade-up delay-2">
                        <%= title %>
                    </p>
                    <div class="hero-contact animate-fade-up delay-3">
                        <% if (email) { %>
                            <a href="mailto:<%= email %>" class="contact-chip">
                                <span class="chip-icon">‚úâ</span>
                                <%= email %>
                            </a>
                            <% } %>
                                <% if (phone) { %>
                                    <span class="contact-chip">
                                        <span class="chip-icon">üìû</span>
                                        <%= phone %>
                                    </span>
                                    <% } %>
                                        <% if (location) { %>
                                            <span class="contact-chip">
                                                <span class="chip-icon">üìç</span>
                                                <%= location %>
                                            </span>
                                            <% } %>
                    </div>
                    <div class="hero-socials animate-fade-up delay-4">
                        <% if (linkedin) { %>
                            <a href="<%= linkedin %>" target="_blank" class="social-btn" title="LinkedIn">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path
                                        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                </svg>
                            </a>
                            <% } %>
                                <% if (github) { %>
                                    <a href="<%= github %>" target="_blank" class="social-btn" title="GitHub">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                            <path
                                                d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                                        </svg>
                                    </a>
                                    <% } %>
                    </div>
                </div>
                <div class="hero-avatar animate-fade-up delay-2">
                    <div class="avatar-ring">
                        <div class="avatar-placeholder">
                            <span>
                                <%= name ? name.charAt(0) : 'A' %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Summary Section -->
        <section class="section section-summary" id="summary">
            <div class="container">
                <h2 class="section-title">
                    <a href="/about" class="title-link"><span class="title-accent">01.</span> About Me</a>
                </h2>
                <div class="summary-card glass-card">
                    <p class="summary-text">
                        <%= summary %>
                    </p>
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section class="section section-skills" id="skills">
            <div class="container">
                <div class="section-header-flex">
                    <h2 class="section-title">
                        <a href="/skills" class="title-link"><span class="title-accent">02.</span> Skills</a>
                    </h2>
                    <a href="/skills" class="btn btn-sm btn-outline">View Full List ‚Üí</a>
                </div>
                <div class="skills-grid">
                    <% if (skills && skills.length) { %>
                        <% skills.forEach((skill, i)=> { %>
                            <div class="skill-chip" style="animation-delay: <%= i * 0.05 %>s">
                                <%= skill %>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p class="empty-state">No skills added yet.</p>
                                    <% } %>
                </div>
            </div>
        </section>

        <!-- Experience Section -->
        <% if (experience && experience.length) { %>
            <section class="section section-experience" id="experience">
                <div class="container">
                    <h2 class="section-title">
                        <span class="title-accent">03.</span> Experience
                    </h2>
                    <div class="timeline">
                        <% experience.forEach((exp, i)=> { %>
                            <div class="timeline-item" style="animation-delay: <%= i * 0.15 %>s">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content glass-card">
                                    <h3 class="timeline-role">
                                        <%= exp.role %>
                                    </h3>
                                    <p class="timeline-company">
                                        <%= exp.company %>
                                    </p>
                                    <p class="timeline-duration">
                                        <%= exp.duration %>
                                    </p>
                                    <p class="timeline-desc">
                                        <%= exp.description %>
                                    </p>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </section>
            <% } %>

                <!-- Projects Section -->
                <section class="section section-projects" id="projects">
                    <div class="container">
                        <h2 class="section-title">
                            <span class="title-accent">04.</span> Projects
                        </h2>
                        <div class="projects-grid">
                            <% if (projects && projects.length) { %>
                                <% projects.forEach((project, i)=> { %>
                                    <div class="project-card glass-card" style="animation-delay: <%= i * 0.1 %>s">
                                        <div class="project-header">
                                            <span class="project-icon">üìÅ</span>
                                            <% if (project.link) { %>
                                                <a href="<%= project.link %>" target="_blank" class="project-link"
                                                    title="View project">‚Üó</a>
                                                <% } %>
                                        </div>
                                        <h3 class="project-title">
                                            <%= project.title %>
                                        </h3>
                                        <p class="project-desc">
                                            <%= project.description %>
                                        </p>
                                        <div class="project-tech">
                                            <% if (project.technologies && project.technologies.length) { %>
                                                <% project.technologies.forEach(tech=> { %>
                                                    <span class="tech-tag">
                                                        <%= tech %>
                                                    </span>
                                                    <% }); %>
                                                        <% } %>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <p class="empty-state">No projects added yet. Head to the <a
                                                    href="/admin">Admin Dashboard</a> to add some!</p>
                                            <% } %>
                        </div>
                    </div>
                </section>

                <!-- Education Section -->
                <section class="section section-education" id="education">
                    <div class="container">
                        <h2 class="section-title">
                            <span class="title-accent">05.</span> Education
                        </h2>
                        <div class="education-grid">
                            <% if (education && education.length) { %>
                                <% education.forEach((edu, i)=> { %>
                                    <div class="education-card glass-card" style="animation-delay: <%= i * 0.1 %>s">
                                        <div class="edu-icon">üéì</div>
                                        <h3 class="edu-degree">
                                            <%= edu.degree %>
                                        </h3>
                                        <p class="edu-institution">
                                            <%= edu.institution %>
                                        </p>
                                        <div class="edu-meta">
                                            <span class="edu-year">
                                                <%= edu.year %>
                                            </span>
                                            <% if (edu.gpa) { %>
                                                <span class="edu-gpa">GPA: <%= edu.gpa %></span>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <p class="empty-state">No education entries yet.</p>
                                            <% } %>
                        </div>
                    </div>
                </section>

                <%- include('partials/footer') %>