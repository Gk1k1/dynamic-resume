<%- include('partials/header') %>
    <%- include('partials/navbar') %>

        <section class="page-hero">
            <div class="container hero-content">
                <div class="hero-text text-center">
                    <h1 class="hero-name animate-fade-up">Work Experience</h1>
                    <p class="hero-title animate-fade-up delay-1">My professional journey and career milestones.</p>
                </div>
            </div>
        </section>

        <section class="section section-experience">
            <div class="container">
                <div class="glass-card experience-full-card">
                    <h2 class="section-title">
                        <span class="title-accent">üíº</span> Career Path
                    </h2>
                    <p class="section-subtitle">A detailed look at my roles, responsibilities, and the impact I've made
                        throughout my career.</p>

                    <div class="timeline-full">
                        <% if (experience && experience.length) { %>
                            <% experience.forEach((exp, i)=> { %>
                                <div class="timeline-item-lg glass-card" style="animation-delay: <%= i * 0.1 %>s">
                                    <div class="exp-header">
                                        <div class="exp-title-box">
                                            <h3 class="exp-role">
                                                <%= exp.role %>
                                            </h3>
                                            <p class="exp-company">@ <%= exp.company %>
                                            </p>
                                        </div>
                                        <div class="exp-actions">
                                            <span class="exp-duration-tag">
                                                <%= exp.duration %>
                                            </span>
                                            <form action="/experience/delete/<%= exp.id %>" method="POST"
                                                class="delete-exp-form"
                                                onsubmit="return confirm('Are you sure you want to delete this experience?')">
                                                <button type="submit" class="btn-delete-exp" title="Delete Experience">
                                                    <span class="trash-icon">üóëÔ∏è</span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="exp-body">
                                        <p class="exp-desc">
                                            <%= exp.description %>
                                        </p>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p class="empty-state">No experience entries yet.</p>
                                        <% } %>
                    </div>

                    <!-- Add Experience Option -->
                    <div class="add-exp-wrapper glass-card mt-xl">
                        <h3 class="add-skill-title">Add Your Experience</h3>
                        <form action="/experience/add" method="POST" class="add-exp-form">
                            <div class="form-grid">
                                <div class="form-group-full">
                                    <input type="text" name="role" placeholder="Job Title (e.g. Lead Developer)"
                                        required class="exp-input">
                                </div>
                                <div class="form-group-full">
                                    <input type="text" name="company" placeholder="Company Name" required
                                        class="exp-input">
                                </div>
                                <div class="form-group-full">
                                    <input type="text" name="duration" placeholder="Duration (e.g. 2021 - Present)"
                                        required class="exp-input">
                                </div>
                                <div class="form-group-full">
                                    <textarea name="description" placeholder="Short description of your achievements..."
                                        rows="3" class="exp-input"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn-add-exp">
                                <span class="plus-icon">+</span> Add Experience
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>

            <style>
                .page-hero {
                    padding: 120px 0 60px;
                    background: var(--gradient-hero);
                    text-align: center;
                }

                .text-center {
                    text-align: center;
                    margin: 0 auto;
                }

                .section-subtitle {
                    margin-bottom: var(--gap-xl);
                    color: var(--color-text-secondary);
                }

                .timeline-full {
                    display: flex;
                    flex-direction: column;
                    gap: var(--gap-lg);
                    margin-top: var(--gap-xl);
                }

                .timeline-item-lg {
                    padding: var(--gap-lg);
                    border-left: 4px solid var(--color-primary);
                    transition: all var(--transition-base);
                }

                .timeline-item-lg:hover {
                    transform: translateX(10px);
                    background: rgba(99, 102, 241, 0.05);
                }

                .exp-header {
                    display: flex;
                    justify-content: space-between;
                    align-items: flex-start;
                    margin-bottom: var(--gap-md);
                }

                .exp-role {
                    font-size: 1.4rem;
                    color: var(--color-primary);
                    margin-bottom: 5px;
                }

                .exp-company {
                    font-size: 1.1rem;
                    font-weight: 600;
                    color: var(--color-text-primary);
                }

                .exp-actions {
                    display: flex;
                    align-items: center;
                    gap: var(--gap-md);
                }

                .exp-duration-tag {
                    background: var(--color-primary);
                    color: white;
                    padding: 4px 12px;
                    border-radius: 20px;
                    font-size: 0.85rem;
                    font-weight: 600;
                }

                .btn-delete-exp {
                    background: rgba(239, 68, 68, 0.1);
                    border: 1px solid rgba(239, 68, 68, 0.2);
                    color: #ef4444;
                    width: 32px;
                    height: 32px;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    cursor: pointer;
                    transition: all 0.3s ease;
                }

                .btn-delete-exp:hover {
                    background: #ef4444;
                    color: white;
                    transform: scale(1.1);
                }

                .trash-icon {
                    font-size: 1rem;
                }

                .exp-desc {
                    line-height: 1.6;
                    color: var(--color-text-secondary);
                }

                .mt-xl {
                    margin-top: var(--gap-xl);
                }

                .add-exp-wrapper {
                    padding: var(--gap-lg);
                    max-width: 800px;
                    margin: var(--gap-xl) auto 0;
                    border: 1px dashed var(--color-primary);
                }

                .form-grid {
                    display: grid;
                    grid-template-columns: 1fr;
                    gap: var(--gap-md);
                    margin-bottom: var(--gap-md);
                }

                .exp-input {
                    width: 100%;
                    padding: 12px 16px;
                    border-radius: 8px;
                    border: 1px solid rgba(255, 255, 255, 0.1);
                    background: rgba(255, 255, 255, 0.05);
                    color: white;
                    outline: none;
                    transition: all 0.3s ease;
                    font-family: inherit;
                }

                .exp-input:focus {
                    border-color: var(--color-primary);
                    background: rgba(255, 255, 255, 0.1);
                }

                .btn-add-exp {
                    padding: 12px 30px;
                    border-radius: 8px;
                    border: none;
                    background: var(--gradient-primary);
                    color: white;
                    font-weight: 600;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    transition: all 0.3s ease;
                    margin: 0 auto;
                }

                .btn-add-exp:hover {
                    transform: translateY(-2px);
                    box-shadow: 0 5px 15px rgba(99, 102, 241, 0.4);
                }

                @media (min-width: 768px) {
                    .form-grid {
                        grid-template-columns: 1fr 1fr;
                    }

                    .form-group-full:nth-child(4) {
                        grid-column: span 2;
                    }
                }
            </style>